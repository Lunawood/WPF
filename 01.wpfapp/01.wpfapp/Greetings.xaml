<Window x:Class="_01.wpfapp.Greetings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01.wpfapp"
        mc:Ignorable="d"
        Title="wpfapp" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,88,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="197,194,0,0" VerticalAlignment="Top" IsChecked="True" Checked="HelloButton_Checked"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="554,194,0,0" VerticalAlignment="Top" Checked="GoodbyeButton_Checked"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,322,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
